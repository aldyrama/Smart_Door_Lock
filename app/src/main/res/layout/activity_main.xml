<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".Home.MainActivity"
    android:orientation="vertical"
    android:background="@color/blue_gray">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolhome"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/bann"
        android:gravity="center"
        style="@style/AppTheme.AppBarOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center|bottom">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:gravity="bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="0dp"
                    android:gravity="center|bottom"
                    android:text="Home"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            <ImageView
                android:id="@+id/action_add_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickView"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:src="@drawable/ic_action_add_white"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"/>

            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame_layout_main"
        android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:id="@+id/empty_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Device"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:drawableTop="@drawable/emptyy"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/mRecyclerView"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="45dp"/>

        <RelativeLayout
            android:layout_below="@+id/topBar"
            android:layout_above="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <android.support.v7.widget.CardView
                android:id="@+id/cards_add_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="48dp"
                android:layout_marginBottom="48dp"
                android:layout_marginRight="26dp"
                android:layout_marginLeft="26dp"
                app:cardCornerRadius="35dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onClickView"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:elevation="8dp"
                android:divider="@android:color/transparent"
                android:dividerHeight="0.0px"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:visibility="visible"
                card_view:cardElevation="10dp"
                card_view:cardPreventCornerOverlap="false">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/ck"
                    android:layout_gravity="center"
                    app:civ_border_width="0dp" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_action_add_white"
                    android:layout_gravity="center" />

            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <com.rbrooks.indefinitepagerindicator.IndefinitePagerIndicator
            android:id="@+id/recyclerview_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:dotColor="@color/gray400"
            app:supportRTL="true"
            app:selectedDotColor="@color/blackk"
            app:selectedDotRadius="5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="60dp"
            android:layout_centerHorizontal="true"/>

        <FrameLayout
            android:id="@+id/fader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:drawable/screen_background_dark_transparent"
            android:visibility="invisible" />

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/myDataLoaderProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AVLoadingIndicatorView.Large"
            android:visibility="visible"
            app:indicatorName="LineScalePulseOutIndicator"
            app:indicatorColor="@android:color/holo_blue_dark"
            android:elevation="3dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/bottomBar"
            android:layout_alignParentBottom="true">

            <android.support.design.widget.BottomNavigationView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bottomNavView_Bar"
                android:background="@drawable/white_grey_border_top"
                app:menu="@menu/bottom_navigation_menu"
                app:itemIconTint="@color/tab_color"
                app:itemTextColor="@color/black"
                app:labelVisibilityMode="labeled">
            </android.support.design.widget.BottomNavigationView>
        </RelativeLayout>
    </RelativeLayout>
    </FrameLayout>
</LinearLayout>
