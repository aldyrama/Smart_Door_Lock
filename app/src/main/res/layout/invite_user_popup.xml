<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center">

    <ImageView
        android:id="@+id/close_popup_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_close"
        android:layout_marginTop="7dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="7dp"
        android:elevation="5dp"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@color/blue_gray">

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="25dp"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add member"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"/>

                    <EditText
                        android:id="@+id/email_member"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:hint="Email member"
                        android:padding="10dp"
                        android:imeOptions="actionDone"
                        android:layout_gravity="center"
                        android:textSize="14sp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_change"
                        android:inputType="textEmailAddress"
                        android:singleLine="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Access :"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:layout_gravity="left"
                    android:textColor="@color/black"/>

                <CheckBox
                    android:id="@+id/always_member"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="6dp"
                    android:text="always"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/exp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Expired"
                        android:textSize="12sp"
                        android:drawablePadding="5dp"
                        android:gravity="center|left"
                        android:padding="10dp"
                        android:drawableLeft="@drawable/ic_date"
                        android:layout_gravity="center|right"/>
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="20dp">

                    <Button
                        android:id="@+id/send_invite"
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:background="@drawable/transparent_bg_bordered"
                        android:text="Add"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="45dp"
                        android:textSize="14sp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"/>

                </RelativeLayout>
            </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>